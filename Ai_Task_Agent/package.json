
{
  "name": "ai-coding-assistant",
  "version": "1.0.0",
  "description": "AI Coding Assistant for local development",
  "main": "server.js",
  "bin": {
    "ai-coding-assistant": "./cli.js"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "client-build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "dev-all": "concurrently \"npm run dev\" \"npm run client\"",
    "postinstall": "node -e \"try { require('fs').symlinkSync(require('path').resolve('node_modules/'), 'client/node_modules', 'junction') } catch (e) { }\""
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.3.4",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "commander": "^9.5.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.21"
  }
}

